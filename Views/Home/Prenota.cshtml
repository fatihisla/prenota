@model Utente
@{
     ViewData["Title"] = "Prenota";
}

<h2>Modulo di prenotazione</h2>
<p>Riempi i seguenti campi e registrati sul nostro sito</p>
<form asp-controller="Home" asp-action="Prenotato" method="post">
     <div class="form-group">
          <label asp-for="Nome"></label>
          <input type="text" asp-for="Nome" class="form-control" />
          <span asp-validation-for="Nome" />
     </div>
     <div class="form-group">
          <label asp-for="Cognome"></label>
          <input type="text" asp-for="Cognome" class="form-control" />
          <span asp-validation-for="Cognome" />
     </div>
     <div class="form-group">
          <label asp-for="Tipo"></label>
          <select type="text" asp-for="Tipo" class="form-control">
               <option>Musicista</option>
               <option>Programmatore</option>
               <option>Sostenitore</option>
          </select>
          <span asp-validation-for="Tipo" />
     </div>
     <div class="form-group">
          <label asp-for="Email"></label>
          <textarea asp-for="Email" class="form-control"></textarea>
          <span asp-validation-for="Email" />
     </div>
     <div class="form-group">
          <label asp-for="Città"></label>
          <input type="text" asp-for="Città" class="form-control" />
          <span asp-validation-for="Città" />
     </div>
     <div class="form-group">
          <div asp-validation-summary="All"></div>
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-send"></i> Prenota</button>
     </div>
</form>
<div class="text-center">
     <h1 class="display-4">Pagina di Prenotazione</h1>
</div>